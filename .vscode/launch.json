{
    "version": "1.0.0",
    "configurations": [
      {
        "env": {
          "NODE_ENV": "debug"
        },
        "name": "TS-Node",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
        "runtimeArgs": [
          "--transpile-only",
          // if you use esm
          "--esm" 
        ],
        "program": "${file}",
        "cwd": "${workspaceRoot}",
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": ["<node_internals>/**", "node_modules/**"]
      }
    ]
  }
  